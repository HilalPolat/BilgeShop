

@model List<CategoryViewModel>

<div class="list-group">

	<a asp-controller="home" asp-action="index" asp-route-categoryId="" asp-route-categoryName="" class="fw-bold list-group-item list-group-item-action"> 
		Tüm Ürünler
	</a>

	@foreach (var category in Model)
	{
		<a asp-controller="home" asp-action="index" asp-route-categoryId="@category.Id" asp-route-categoryName="@category.Name" class="list-group-item list-group-item-action">
			@category.Name
		</a>
	}
</div>